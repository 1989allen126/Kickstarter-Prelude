# Uncomment the next line to define a global platform for your project
platform :ios, '8.0'

def common_pods
	pod 'Runes','4.1.0'
end

target 'Prelude-iOS' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Prelude-iOS
  common_pods

  target 'Prelude-iOSTests' do
    inherit! :search_paths
    # Pods for testing
    common_pods
  end

end

target 'Prelude-tvOS' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Prelude-tvOS
  common_pods

  target 'Prelude-tvOSTests' do
    inherit! :search_paths
    # Pods for testing
    common_pods
  end

end

target 'Prelude-UIKit-iOS' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Prelude-UIKit-iOS
  common_pods

  target 'Prelude-UIKit-iOSTests' do
    inherit! :search_paths
    # Pods for testing
    common_pods
  end

end

target 'Prelude-UIKit-tvOS' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Prelude-UIKit-tvOS
  common_pods

  target 'Prelude-UIKit-tvOSTests' do
    inherit! :search_paths
    # Pods for testing
    common_pods
  end

end
